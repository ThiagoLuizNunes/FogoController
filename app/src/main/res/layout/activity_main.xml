<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.milton.fogocontroler.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:text="IP Server:"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="65dp"
        android:paddingBottom="5dp"
        android:text="http://150.165.205.160:3000"
        android:maxLength="30"
        android:singleLine="true"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="15dp" />
    <!--android:hint="http://150.165.205.160:3000"-->


    <Button
        android:id="@+id/buttonIP"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edIP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:onClick="onClickIP"
        android:text="Connect"
        android:textColor="#F5F5F5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonIP"
        android:layout_marginTop="34dp"
        android:fontFamily="sans-serif-medium"
        android:text="Local Network"
        android:textSize="15dp" />

    <Button
        android:id="@+id/buttonWIFI"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:onClick="onClickWIFI"
        android:text="Connect"
        android:textColor="#F5F5F5" />

</RelativeLayout>
